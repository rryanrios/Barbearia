            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:text="R$ 60,00"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
